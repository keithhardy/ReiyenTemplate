<p style="color: green"><%= notice %></p>

<h1>Login</h1>

<%= form_with(url: sessions_path, method: :post) do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit 'Log in' %>
  </div>
<% end %>

<%= link_to "New user", new_user_path %>